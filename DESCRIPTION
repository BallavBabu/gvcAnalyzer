Package: gvcAnalyzer
Type: Package
Title: Global Value Chain Decomposition and Analysis
Version: 0.1.0
Authors@R: c(
    person("Ballav", "Babu", email = "ballav.babu@example.com", 
           role = c("aut", "cre"),
